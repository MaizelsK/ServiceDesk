@model IEnumerable<ServiceDeskApplication.Models.TroubleTask>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Сотрудник
        </th>
        <th>
            Создана
        </th>
        <th>
            Текст
        </th>
        <th>
            Комментарий
        </th>
        <th>
            Статус
        </th>
        <th>
            Назначен на выполнение
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneratedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (item.Assigned == null)
                {
                    @Html.ActionLink("Назначить", "Assign", new { id = item.Id })
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Assigned.FullName)
                }
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @if (User.IsInRole("tech"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
